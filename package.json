{
  "name": "e-commerce-lydia-32-bn",
  "version": "1.0.0",
  "type": "module",
  "description": "A platform that provides a marketplace for buyers and sellers to meet",
  "main": "dist/server.js",
  "scripts": {
    "migrate": "sequelize-cli db:migrate --config=config/config.mjs",
    "undo:migrations": "sequelize-cli db:migrate:undo:all --config=config/config.mjs",
    "seeds": "sequelize-cli db:seed:all --config=config/config.mjs",
    "undo:seeds": "sequelize-cli db:seed:undo --config=config/config.mjs ",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "devstart": "tsc & nodemon dist/src/server.js",
    "seed": "npx sequelize-cli db:seed:all",
    "server": "nodemon dist/src/server.js",
    "prepare": "husky install",
    "test": "mocha dist/tests/*.test.js",
    "coverage": "c8 --reporter=lcov --reporter=text mocha dist/tests/*.test.js",
    "coveralls": "c8 report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-stage"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@jsdevtools/ono": "^7.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/pino": "^7.0.5",
    "bcrypt": "^5.1.1",
    "c8": "^9.1.0",
    "chai": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "coveralls": "^3.1.1",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^9.10.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.4.0",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "pino": "^9.1.0",
    "remove": "^0.1.5",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/chai": "^4.3.16",
    "@types/node": "^20.12.11",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "joi": "^17.13.1",
    "prettier": "^3.2.5",
